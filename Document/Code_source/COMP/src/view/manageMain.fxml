<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1100.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.ManageMainController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="메뉴">
					<items>
						<MenuItem mnemonicParsing="false" text="종료"
							onAction="#menuClose" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="정보">
					<items>
						<MenuItem mnemonicParsing="false" text="문의하기"
							onAction="#menuConnectInfo" />
						<MenuItem mnemonicParsing="false" text="프로그램 정보"
							onAction="#menuProgramInfo" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<TabPane prefHeight="200.0" prefWidth="200.0"
			fx:id="manageMainPane" tabClosingPolicy="UNAVAILABLE"
			BorderPane.alignment="CENTER">
			<tabs>
				<Tab text="재고관리" fx:id="stock">
					<content>
						<fx:include fx:id="manageStockTab"
							source="/view/manageStockTab.fxml" />
					</content>
				</Tab>
				<Tab text="매출관리" fx:id="result">
					<content>
						<fx:include fx:id="manageResultTab"
							source="/view/manageResultTab.fxml" />
					</content>
				</Tab>
				<Tab text="고객관리" fx:id="customer">
					<content>
						<fx:include fx:id="manageCustomerTab"
							source="/view/manageCustomerTab.fxml" />
					</content>
				</Tab>
				<Tab text="주문관리" fx:id="order">
					<content>
						<fx:include fx:id="manageOrderTab"
							source="/view/manageOrderTab.fxml" />
					</content>
				</Tab>
				<Tab text="정보관리" fx:id="myInfo">
					<content>
						<fx:include fx:id="manageMyInfoTab"
							source="/view/manageMyInfoTab.fxml" />
					</content>
				</Tab>
				<Tab text="거래처관리" fx:id="trader">
					<content>
						<fx:include fx:id="manageTraderTab"
							source="/view/manageTraderTab.fxml" />
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</center>
</BorderPane>
