<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="750.0" prefWidth="1100.0"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.ManageCustomerTabController">
	<children>
		<VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="350.0"
			spacing="5.0">
			<padding>
				<Insets left="10.0" right="10.0" top="30.0" />
			</padding>
			<children>
				<Label text="[고객 정보]">
					<font>
						<Font size="30.0" />
					</font>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<padding>
						<Insets bottom="20.0" left="10.0" top="10.0" />
					</padding>
				</Label>
				<VBox alignment="TOP_CENTER" prefHeight="63.0"
					prefWidth="330.0" spacing="10.0">
					<children>
						<HBox alignment="CENTER" prefHeight="40.0" prefWidth="280.0"
							spacing="20.0">
							<children>
								<Label alignment="CENTER" prefWidth="60.0" text="고객번호" />
								<TextField fx:id="txtCNum" prefWidth="160.0" />
							</children>
						</HBox>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<padding>
						<Insets top="10.0" />
					</padding>
				</VBox>
				<VBox alignment="BOTTOM_CENTER" prefHeight="150.0"
					prefWidth="100.0" spacing="20.0">
					<children>
						<HBox alignment="CENTER" prefHeight="30.0" prefWidth="280.0"
							spacing="20.0">
							<children>
								<Label alignment="CENTER" prefWidth="60.0" text="고객명" />
								<TextField fx:id="txtCName" prefWidth="160.0" />
							</children>
						</HBox>
						<HBox alignment="CENTER" prefHeight="30.0" prefWidth="280.0"
							spacing="20.0">
							<children>
								<Label alignment="CENTER" prefWidth="60.0" text="고객ID" />
								<TextField fx:id="txtCId" prefWidth="160.0" />
							</children>
						</HBox>
						<HBox alignment="CENTER" prefHeight="30.0" prefWidth="280.0"
							spacing="20.0">
							<children>
								<Label alignment="CENTER" prefWidth="60.0" text="고객PW" />
								<PasswordField fx:id="pwCPasswd" prefWidth="160.0" />
							</children>
						</HBox>
					</children>
				</VBox>
				<VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
					spacing="20.0">
					<children>
						<HBox alignment="CENTER" prefHeight="30.0" prefWidth="280.0"
							spacing="20.0">
							<children>
								<Label alignment="CENTER" prefWidth="60.0" text="전화번호" />
								<TextField fx:id="txtCPhone" prefWidth="160.0" />
							</children>
						</HBox>
						<HBox alignment="CENTER" prefHeight="30.0" prefWidth="280.0"
							spacing="20.0">
							<children>
								<Label alignment="CENTER" prefWidth="60.0" text="주소" />
								<TextField fx:id="txtCAddress" prefWidth="160.0" />
							</children>
						</HBox>
						<HBox alignment="CENTER" prefHeight="30.0" prefWidth="280.0"
							spacing="20.0">
							<children>
								<Label alignment="CENTER" prefWidth="60.0" text="생년월일" />
								<TextField fx:id="txtCBrith" prefWidth="160.0" />
							</children>
						</HBox>
					</children>
				</VBox>
				<VBox alignment="TOP_CENTER" prefHeight="100.0"
					prefWidth="330.0">
					<children>
						<HBox alignment="CENTER" prefHeight="30.0" prefWidth="280.0"
							spacing="20.0">
							<children>
								<Label alignment="CENTER" prefWidth="60.0" text="이메일" />
								<TextField fx:id="txtCEmail" prefWidth="160.0">
									<HBox.margin>
										<Insets />
									</HBox.margin>
								</TextField>
							</children>
						</HBox>
					</children>
				</VBox>
				<HBox alignment="TOP_CENTER" prefHeight="100.0"
					prefWidth="200.0" spacing="20.0">
					<children>
						<Button fx:id="btnCInsert" mnemonicParsing="false"
							onAction="#btnCInsert" prefHeight="30.0" text="고객 등록" />
						<Button fx:id="btnCUpdate" mnemonicParsing="false"
							onAction="#btnCUpdate" prefHeight="30.0" text="고객 수정" />
						<Button fx:id="btnCDelete" mnemonicParsing="false"
							onAction="#btnCDelete" prefHeight="30.0" text="고객 삭제" />
					</children>
				</HBox>
			</children>
		</VBox>
		<VBox prefHeight="750.0" prefWidth="750.0">
			<children>
				<HBox alignment="BOTTOM_LEFT" prefHeight="100.0"
					prefWidth="200.0">
					<padding>
						<Insets bottom="10.0" right="200.0" />
					</padding>
					<children>
						<ComboBox fx:id="cmbCSearchKey" prefWidth="130.0"
							promptText="검색 구분" />
						<TextField fx:id="txtCSearchValue" prefWidth="310.0" />
						<Button fx:id="btnCSearch" mnemonicParsing="false"
							onAction="#btnCSearch" prefWidth="50.0" text="검색" />
					</children>
				</HBox>
				<TableView fx:id="customerTableView"
					onMouseClicked="#customerTableView" prefHeight="600.0"
					prefWidth="690.0">
					<columns>
						<TableColumn prefWidth="75.0" text="고객번호" />
						<TableColumn prefWidth="75.0" text="고객명" />
						<TableColumn prefWidth="75.0" text="고객ID" />
						<TableColumn prefWidth="75.0" text="전화번호" />
						<TableColumn prefWidth="146.0" text="주소" />
						<TableColumn prefWidth="68.0" text="생년월일" />
						<TableColumn prefWidth="90.0" text="이메일" />
						<TableColumn prefWidth="85.0" text="등록일" />
					</columns>
				</TableView>
			</children>
			<padding>
				<Insets bottom="50.0" left="10.0" right="50.0" top="50.0" />
			</padding>
		</VBox>
	</children>
</HBox>

