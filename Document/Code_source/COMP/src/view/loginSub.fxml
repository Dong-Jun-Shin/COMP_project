<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.LoginSubController">
	<children>
		<HBox alignment="CENTER" prefHeight="53.0" prefWidth="350.0"
			spacing="60.0">
			<children>
				<RadioButton mnemonicParsing="false" text="ID찾기" />
				<RadioButton mnemonicParsing="false" text="PW찾기" />
			</children>
		</HBox>
		<VBox alignment="CENTER" prefHeight="133.0" prefWidth="350.0">
			<children>
				<HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0"
					spacing="30.0">
					<children>
						<Label alignment="CENTER" prefWidth="50.0" text="계좌주"
							textAlignment="CENTER" />
						<TextField fx:id="txtBOwner" prefHeight="25.0"
							prefWidth="150.0" />
					</children>
				</HBox>
				<HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0"
					spacing="30.0">
					<children>
						<Label alignment="CENTER" prefWidth="50.0" text="계좌번호" />
						<TextField fx:id="txtBNum" prefHeight="25.0"
							prefWidth="150.0" />
					</children>
				</HBox>
				<HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0"
					spacing="30.0">
					<children>
						<Label alignment="CENTER" prefWidth="50.0" text="ID"
							textAlignment="CENTER" />
						<TextField fx:id="txtSearchID" prefHeight="25.0"
							prefWidth="150.0" />
					</children>
				</HBox>
			</children>
		</VBox>
		<Button fx:id="btnIdSearch" mnemonicParsing="false"
			onAction="#btnIdSearch" prefHeight="25.0" prefWidth="80.0" text="확인">
			<VBox.margin>
				<Insets top="30.0" />
			</VBox.margin>
		</Button>
	</children>
</VBox>
